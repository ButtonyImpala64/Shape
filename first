    public class Password
    {
        private string Pword;
       public void setPW(string Pword)
        {
            this.Pword = Pword;
        }
       public string getPW() { return Pword; }
        public bool validLength()
        {
            int num=Pword.Length;
            if (num >= 8) return true;
            else return false;
        }
        public bool oneNumatLeast()
        {
            for (int i = 0; i < Pword.Length; i++)
            {
                if (Pword[i] <= '9' || Pword[i] >= '0') return true;
            }
            return false;
        }
    }
MohmdwG4mer:
        public class Password
        {
            private string Pword;
            private bool flagLower;
            private bool flagUpper;
            public bool hasONELowerCase()
            {
                 flagLower = false;
                int count = 0;

                while (!flagLower && count !=Pword.Length)
                {
                    if (char.IsLower(Pword[count]))
                    {
                        flagLower = true;
                    }
                    else
                    {
                        flagLower = false;
                    }
                    count++;
                }
                return flagLower;
            }
            public bool hasONEUpperCase()
            {
                 flagUpper = false;
                int count = 0;

                while (!flagUpper && count != Pword.Length)
                {
                    if (char.IsUpper(Pword[count]))
                    {
                        flagUpper = true;
                    }
                    else
                    {
                        flagUpper = false;
                    }
                    count++;
                }
                return flagUpper;
            }

            public void setPassword(string password)
            {
                this.Pword = password;
            }
            public string getPassword()
            {
                return Pword;
            }

        }

class RightAngle
{

    private double perp1 = null;

    private double perp2 = null;

    private double hyp = null;



    public RightAngle(double p1, double p2, double hyp) {

      perp1 = p1;
      perp2 = p2;
      this.hyp = hyp; 
      
    }
    public double Area()
    {

        return perp1 * perp2 / 2;

    }

    public double Perimeter()
    {

        return perp1 + perp2 + hyp;

    }


}
